@model List<Folder>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row mb-5">
    <div class="col-2">
        <a href="/home/AddNewFolder" class="btn btn-primary">
            <i class="fas fa-folder-plus"></i>
        </a>
    </div>
</div>
@if (Model != null && Model.Count() > 0)
{
    <h2 class="text text-primary">Root</h2>
    <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-2">
                <a asp-action="folder" asp-route-folderId="@item.Id">
                    <i class="fas fa-folder-open" style="font-size:140px;color:#ffe9a0"></i>
                  @*  <input type="text" class="rename form-control">*@
                </a>
                <br>
                <span class="text">@item.Title</span>
            </div>
        }
    </div>
}